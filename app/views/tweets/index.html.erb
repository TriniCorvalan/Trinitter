

<div class="row mb-3">
    <div class="col-xs-8 col-sm-10">
      <h1>Tweets</h1>
    </div>
    <div class="col-xs-4 col-sm-2">
      <%= link_to 'New tweet', new_tweet_path, class: "btn btn-info btn-sm" %>
    </div>
</div>

<%= paginate @tweets %>
  
<div class="row mb-3 mt-3">
  <% @tweets.each do |tweet| %>
    <div class="col-sm-6 col-md-4 card-deck">
      <div class="img-thumbnail card mt-2">
          <div class="card-body">
            <h5 class="card-title"><%= tweet.content.truncate(150)  %></h5>
            <p class="card-text"><%= link_to(image_tag(tweet.user.photo, class: "img-fluid rounded d-inline-block w-25"), tweet) if tweet.user.photo? %>
            <%= tweet.user %></p>
            <p class="card-text"><small><%= time_ago_in_words(tweet.created_at) %> ago</small></p>
              <%= link_to 'rt', root_path, class: "btn btn-info btn-sm mt-2 mr-2 mb-2" %>
              <div class="btn btn-outline-danger btn-sm">
                <%= tweet.likes_count %> likes
              </div>
            <p>
              <%= link_to 'Show', tweet, class: "btn btn-outline-info btn-sm" %> 
              <%= link_to 'Edit', edit_tweet_path(tweet), class: "btn btn-outline-dark btn-sm" %> 
              <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-warning btn-sm" %>
            </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @tweets %>


